{
  "name": "intake",
  "env": {
    "DEFAULT_FILE_STORAGE": {
      "required": true
    },
    "DEFAULT_HOST": {
      "required": true
    },
    "DJANGO_SETTINGS_MODULE": {
      "required": true
    },
    "TWILIO_AUTH_TOKEN": {
      "required": true
    },
    "FRONT_API_TOKEN": {
      "required": true
    },
    "FRONT_EMAIL_CHANNEL_ID": {
      "required": true
    },
    "FRONT_PHONE_CHANNEL_ID": {
      "required": true
    },
    "IMPORT_DATABASE_URL": {
      "required": true
    },
    "MAIL_DEFAULT_SENDER": {
      "required": true
    },
    "VOICEMAIL_NOTIFICATION_EMAIL": {
      "required": true
    },
    "MIXPANEL_KEY": {
      "required": true
    },
    "SECRET_KEY": {
      "required": true
    },
    "SENDGRID_API_KEY": {
      "required": true
    },
    "SLACK_WEBHOOK_URL": {
      "required": true
    },
    "TEST_USER_PASSWORD": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    },
    "worker": {
      "quantity": 1
    }
  },
  "addons": [
    "cloudamqp",
    "bucketeer",
    "newrelic",
    "heroku-postgresql",
    {
      "plan": "heroku-postgresql",
	    "as": "test_db"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    },
    {
      "url": "heroku/python"
    }
  ],
  "scripts": {
	  "postdeploy": "./manage.py new_fixtures"
  }
}
