{% extends "admin_base.jinja" %}

{% block content %}
<section class="content">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-10 col_centered">
        {% include "includes/app_detail_navigation.jinja" %}
      </div>
    </div>
    <div class="row">
      <div class="action_bar col-xs-12 col-md-10 col_centered">
        <h1>
        {%- block page_heading -%}
          Application Details
          {% include "app_detail_action_bar.jinja" %}  
        {%- endblock page_heading -%}
        </h1>
      </div>
    </div>
    <div class="row">
      <div class="app_detail-data_display col-xs-12 col-md-10 col_centered">
      {%- block app_detail_contents -%}
        {% for application in applications%}
          {% if application.latest_status %}
            <div class="application-detail-latest-status">
              <div class="col-xs-4 col-md-4">
                <span class="data_display-label">Current Status:</span>
                <br/>
                {{application.latest_status.status_type.display_name}}
                (logged by
                {{application.latest_status.author.profile.name}})
              </div>
              <div class="col-xs-4 col-md-4">
                <span class="data_display-label">Additional Info:</span>
                <br/>
                {{application.latest_status.additional_information}}
              </div>
              <div class="col-xs-4 col-md-4">
                {% if application.latest_status.next_steps or application.latest_status.other_next_step %}
                  <span class="data_display-label">Applicant's Next Steps:</span>
                  <br/>
                  <ul class="event-next-steps">
                    {% for step in application.latest_status.next_steps.all() %}
                      <li>{{ step.display_name }}</li>
                    {% endfor %}

                    {% if application.latest_status.other_next_step %}
                      <li>{{ application.latest_status.other_next_step }}</li>
                    {% endif %}
                  </ul>
                  <br/>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      {% include "formation/intake_display.jinja" %}
      {%- endblock app_detail_contents -%}
      </div>
    </div>
  </div>
</section>
{% endblock content %}
