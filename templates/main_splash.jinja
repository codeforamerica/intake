{% extends "public_base.jinja" %}

{% block above_the_fold %}
<section class="splash above_the_fold">
  <div class="container">

    <div class="row">
      <div class="col-md-6 col-sm-8 col-xs-12 col_centered">
      {% include "includes/public_topbar.jinja" %}
      </div>
    </div>

      <div class="row">
        <div class="col-md-6 col-sm-8 col-xs-12 col_centered">
          <h1 class="main_headline new_section">
            {{ content.main_headline }}
          </h1>

          <h2 class="subheadline">
            {{ content.subheadline }}
          </h2>

          <p class="call_to_action_time">
            {{ content.call_to_action_time }}
          </p>

          <div class="row">
            <div class="col-md-4 col-sm-5">
              <a href="#learn_more_section" class="btn btn-default btn-lg call_to_action_button text-center">
                <span class="main-action-text">
                  {{ content.learn_more_button }}
                </span>
              </a>
            </div>

            <div class="col-md-6 col-sm-7">
              <a href="{{ url('intake-apply') }}" class="btn btn-primary btn-lg call_to_action_button text-center">
                <span class="main-action-text">
                  {{ content.call_to_action_button }}
                </span>
              </a>
            </div>
          </div>

        </div>
      </div>

      <div class="row credibility_note">
        <div class="col-md-6 col-sm-8 col-xs-12 col_centered">
          <p class="small">{{ linkify(content.credibility_note) }}</p>
        </div>
      </div>

  </div>
</section>

{% endblock above_the_fold %}
{% block content %}

<section class="about_the_service">


  <div class="container">

    <div class="row">
      <div class="col-xs-12">
        <h2 class="benefits_headline new_section" id="learn_more_section" name="learn_more_section">{{ content.journey_headline }}</h2>
      </div>
    </div>

    <div class="row">
      <div class="apply_steps">
        <div class="col-xs-12 col-md-3-33">
          <div class="step">
            <h4 class="step_headline">{{ content.step_1_headline }}</h4>
            <p class="step_paragraph">{{ content.step_1_paragraph }}</p>
          </div>
        </div>

        <div class="col-xs-12 col-md-1">
          <h1 class="step-arrow">
            <span class="glyphicon glyphicon-arrow-right visible-md visible-lg" aria-hidden="true"></span>
            <span class="glyphicon glyphicon-arrow-down visible-xs visible-sm" aria-hidden="true"></span>
          </h1>
        </div>

        <div class="col-xs-12 col-md-3-33">
          <div class="step">
            <h4 class="step_headline">{{ content.step_2_headline }}</h4>
            <p class="step_paragraph">{{ content.step_2_paragraph }}</p>
          </div>
        </div>

        <div class="col-xs-12 col-md-1">
          <h1 class="step-arrow">
            <span class="glyphicon glyphicon-arrow-right visible-md visible-lg" aria-hidden="true"></span>
            <span class="glyphicon glyphicon-arrow-down visible-xs visible-sm" aria-hidden="true"></span>
          </h1>
        </div>

        <div class="col-xs-12 col-md-3-33">
          <div class="step">
            <h4 class="step_headline">{{ content.step_3_headline }}</h4>
            <p class="step_paragraph">{{ content.step_3_paragraph }}</p>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="apply_backup">
        <div class="col-xs-12 col-centered">
          <h2 class="backup_apply_headline new_section">{{ content.backup_apply_headline }}</h2>
          <a href="{{ url('intake-apply') }}" class="btn btn-primary btn-lg call_to_action_button">
            <span class="main-action-text">
              {{ content.call_to_action_button }}
            </span>
          </a>
        </div>
      </div>
    </div>

  </div>
</section>

<section class="who_we_are new_section">
