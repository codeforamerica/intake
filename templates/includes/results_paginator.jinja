{%- if results.has_other_pages() %}
<div class="row">
  <nav aria-label="Page navigation" class="pagination-nav">
    <h5 class="page_nav_header">
      Showing <strong>{{ results.start_index() }} - {{ results.end_index() }}</strong> of <strong>{{ results.paginator.count }}</strong> applications
    </h5>
    <ul class="pagination pagination-sm">
      {%- if results.has_previous() %}
      <li title="Previous page">
        <a href="?page={{ results.previous_page_number() }}" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
      {%- endif %}
      {% for page_index in page_counter %}
        {%- if page_index == results.number %}
        <li class="active">
          <span>{{ page_index }} <span class="sr-only">(current)</span></span>
        </li>
        {%- elif page_index == 'jump' %}
        <li class="disabled">
          <span>&hellip;</span>
        </li>
        {%- else %}
        <li title="Jump to page {{ page_index }}">
          <a href="?page={{ page_index }}">{{ page_index }}</a>
        </li>
        {%- endif %}
      {% endfor %}
      {%- if results.has_next() %}
      <li title="Next page">
        <a href="?page={{ results.next_page_number() }}" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
      {%- endif %}
    </ul>
  </nav>
</div>
{%- endif %}